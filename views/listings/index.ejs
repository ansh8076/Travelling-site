    <style>
      .filters-navbar{
        display: flex;
        flex-wrap: nowrap;
        justify-content: space-around;
      }
      #filters{
      display: flex;
      white-space: nowrap;
      overflow-x: auto;
      scroll-behavior: smooth;
      align-items: center;
      width: 70%;
      }
      #filters::-webkit-scrollbar {
      display: none; 
    }
    .filter{
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      opacity: 0.7;
    }
    .filter:hover{
      opacity: 1;
      cursor: pointer;
    }
    .tax-switch{
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.5rem;
      padding: 1rem;
      /* margin-left: 2rem;
      margin-right: 5rem; */
      margin-top: 1.5rem;
      display: flex;
      flex-wrap: nowrap;
      align-items: center;
      opacity: 0.7;
      width: 25%;
    }
    .tax-switch:hover{
      opacity: 1;
    }
    .tax{
      display: none;
    }
    </style>

<div class="filters-navbar">
  <div id="filters">
     <div class="filter">
